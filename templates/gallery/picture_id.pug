extends ./layout.pug
include ./mixins.pug

block title
  title Photo-Gallery

block body
  - var isLoggedIn = true

    div#mainBox
      div.mainPhoto
        img.mainPicture(src= picture.link )
        p#titleName #{picture.title}
        p#sideLink #{picture.link}
        br
        p#description #{picture.description}
      if isLoggedIn
      a.button(href=`/gallery/${picture.id}/edit`) EDIT
      form#delete(method='POST' action=`/gallery/${picture.id}/delete`)
        input(type="hidden" name="_method" value="DELETE")
        button.button(type='submit') DELETE
